<?xml version="1.0" encoding="UTF-8"?>
<root>
    <params>
        <!-- 
        URLs:
        baseUrl: não é necessário incluir a barra (/) antes e depois.
        No exemplo a seguir todos os formatos são válidos: 
            app/site
            /app/site/
            /app/site
            app/site/
        -->
        <param id='baseUrl'>astrolabius</param>        
        <param id='baseUrlHttp'>localhost</param>
        <param id='baseUrlHttps'></param>
        
        <!-- Módulos -->
        <param id='modules'>site,app,beemos</param>
        <param id='defaultModule'>site</param> 
        <param id='magicModules'>app_:aluno,professor,escola;dev_:ambiente1,ambiente2</param>
        
        <param id='defaultTemplate'>padrao.html</param>
        
        <!-- Idiomas do sistema -->
        <param id='languages'>br,en,es</param>
        <param id='defaultLang'>br</param>        
    </params>        
</root>
